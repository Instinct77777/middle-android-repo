<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- ImageView for Bakery Item -->
    <ImageView
        android:id="@+id/bakery_item_image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_launcher_foreground" />

    <!-- LinearLayout for Item Name and Price -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/bakery_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bakery Item" />

        <TextView
            android:id="@+id/bakery_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price" />
    </LinearLayout>

    <!-- MaterialButton to Add Item to Cart -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_to_cart_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        style="@style/Widget.Material3.Button.ElevatedButton" />
</LinearLayout>